<script>




$('[data-target="mobile-nav"]').on("click", function () {
   return $("body").toggleClass("mobile-nav-open"), !1;
});


$("#leftside-navigation .sub-menu > a").click(function(e) {


  if($(this).attr('ouvert')=="0"){
  	$('#leftside-navigation a.top').removeClass('active');
  	$('#leftside-navigation a.top').attr('ouvert','0');
  	 $(this).find('svg').removeClass('fa-angle-right').addClass('fa-angle-down');
  	 $(this).attr('ouvert','1').addClass('active');
  }else {
  	$('#leftside-navigation a.top').removeClass('active');
  	$('#leftside-navigation a.top').attr('ouvert','0');
  	$(this).find('svg').addClass('fa-angle-right').removeClass('fa-angle-down');
  	$(this).attr('ouvert','0').removeClass('active');
  }
  $("#leftside-navigation ul ul").slideUp(), $(this).next().is(":visible") || $(this).next().slideDown(),
  e.stopPropagation()
})



$(window).on('resize', function(){
    var win = $(this); //this = window
  
    if (win.width() <= 1440) { 
    	//// On masque le menu
    	$('header').addClass('reduit');
    	$('.tirette').attr('ouvert','0');
    	setTimeout(function(){
    		$('.tirette').find('svg').addClass('fa-angle-down').removeClass('fa-angle-up');
    	});
    }else {
    	$('header').removeClass('reduit');
    	$('.tirette').attr('ouvert','1');
    	setTimeout(function(){
    		$('.tirette').find('svg').removeClass('fa-angle-down').addClass('fa-angle-up');
    	},200);
    }
});


$(window).resize();




$('.tirette').on('click',function(){
	
	if($(this).attr('ouvert')==0){
		$('header').removeClass('reduit');
		$(this).attr('ouvert','1');
		$(this).find('svg').removeClass('fa-angle-down').addClass('fa-angle-up');
	} else {

		$('header').addClass('reduit');
		$(this).attr('ouvert','0');
		$(this).find('svg').addClass('fa-angle-down').removeClass('fa-angle-up');
	}
});

</script>   



<script>
$( document ).ready(function() {
  
  $('.clickBurger').click(function(){
    $('#header,.ouvertBurger,.fermerBurger').toggle();
  });
  
});


</script>







<script>
(function($){
    $(document).ready(function(){
        var offset = $(".page-head-bg").offset().top+50;
        $(document).scroll(function(){
            var scrollTop = $(document).scrollTop();
            

            if(scrollTop > offset){
                $('header').addClass('reduit');
                $('.tirette').attr('ouvert','0');
                setTimeout(function(){
                  $('.tirette').find('svg').addClass('fa-angle-down').removeClass('fa-angle-up');
                });
            }
            else {
                $('header').removeClass('reduit');
                $('.tirette').attr('ouvert','1');
                setTimeout(function(){
                  $('.tirette').find('svg').removeClass('fa-angle-down').addClass('fa-angle-up');
                });
            }
        });
    });
})(jQuery);



</script>


